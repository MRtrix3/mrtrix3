mrconvert BIDS/sub-01/dwi/sub-01_dwi.nii.gz -fslgrad BIDS/sub-01/dwi/sub-01_dwi.bvec BIDS/sub-01/dwi/sub-01_dwi.bval tmp-sub-01_dwi.mif -export_grad_mrtrix tmp-sub-01_dwi.b -strides 0,0,0,1 && dwigradcheck tmp-sub-01_dwi.mif
dwigradcheck BIDS/sub-01/dwi/sub-01_dwi.nii.gz -fslgrad BIDS/sub-01/dwi/sub-01_dwi.bvec BIDS/sub-01/dwi/sub-01_dwi.bval -export_grad_fsl tmp.bvec tmp.bval -force && testing_diff_matrix tmp.bvec dwigradcheck/fsl.bvec -abs 1e-3
dwigradcheck BIDS/sub-01/dwi/sub-01_dwi.nii.gz -grad tmp-sub-01_dwi.b -export_grad_mrtrix tmp.b -force && testing_diff_matrix tmp.b dwigradcheck/grad.b -abs 1e-3
dwigradcheck tmp-sub-01_dwi.mif -mask BIDS/sub-01/dwi/sub-01_brainmask.nii.gz
