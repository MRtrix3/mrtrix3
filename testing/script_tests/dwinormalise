mkdir -p tmp-dwi && mkdir -p tmp-mask && mrconvert BIDS/sub-02/dwi/sub-02_dwi.nii.gz -fslgrad BIDS/sub-02/dwi/sub-02_dwi.bvec BIDS/sub-02/dwi/sub-02_dwi.bval tmp-dwi/sub-02.mif && mrconvert BIDS/sub-02/dwi/sub-02_brainmask.nii.gz tmp-mask/sub-02.mif && mrconvert BIDS/sub-03/dwi/sub-03_dwi.nii.gz -fslgrad BIDS/sub-03/dwi/sub-03_dwi.bvec BIDS/sub-03/dwi/sub-03_dwi.bval tmp-dwi/sub-03.mif && mrconvert BIDS/sub-03/dwi/sub-03_brainmask.nii.gz tmp-mask/sub-03.mif && dwinormalise group tmp-dwi/ tmp-mask/ tmp-out/ tmp1.mif tmp2.mif -force && testing_diff_image tmp-out/sub-02.mif dwinormalise/group/sub-02.mif.gz -frac 1e-5 && testing_diff_image tmp-out/sub-03.mif dwinormalise/group/sub-03.mif.gz -frac 1e-5 && testing_diff_image tmp1.mif dwinormalise/group/fa.mif.gz -abs 1e-5 && testing_diff_image tmp2.mif dwinormalise/group/mask.mif.gz
dwinormalise individual BIDS/sub-01/dwi/sub-01_dwi.nii.gz -fslgrad BIDS/sub-01/dwi/sub-01_dwi.bvec BIDS/sub-01/dwi/sub-01_dwi.bval BIDS/sub-01/dwi/sub-01_brainmask.nii.gz tmp.mif -force && testing_diff_image tmp.mif dwinormalise/individual/out.mif.gz -frac 1e-5
dwinormalise individual BIDS/sub-01/dwi/sub-01_dwi.nii.gz -fslgrad BIDS/sub-01/dwi/sub-01_dwi.bvec BIDS/sub-01/dwi/sub-01_dwi.bval BIDS/sub-01/dwi/sub-01_brainmask.nii.gz tmp.mif -percentile 40 -force && testing_diff_image tmp.mif dwinormalise/individual/percentile.mif.gz -frac 1e-5
