#!/bin/bash
# Verify that a subset of outputs generated by the command under default operation
#   match that produced by a much earlier software version
# (up-to-date versions of the software generate additional outputs;
#   these are verified in a separate test)
rm -rf tmp/
mkdir tmp/

mrclusterstats mrclusterstats/subjects.txt mrclusterstats/design.txt mrclusterstats/contrast.txt SIFT_phantom/mask.mif tmp/

testing_diff_image tmp/abs_effect.mif mrclusterstats/legacy/abs_effect.mif
testing_diff_image tmp/beta0.mif mrclusterstats/legacy/beta0.mif
testing_diff_image tmp/beta1.mif mrclusterstats/legacy/beta1.mif
testing_diff_image tmp/std_dev.mif mrclusterstats/legacy/std_dev.mif
testing_diff_image tmp/std_effect.mif mrclusterstats/legacy/std_effect.mif
testing_diff_image tmp/tvalue.mif mrclusterstats/legacy/tvalue.mif

# Make sure that the statistical significance mask matches that
#   where a statistical effect was artificially introduced
mrcalc tmp/fwe_1mpvalue.mif 0.95 -gt - | \
testing_diff_image - SIFT_phantom/upper.mif
