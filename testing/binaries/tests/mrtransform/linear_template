#!/bin/bash
# Verify operation when a linear transofrmation to be applied is provided,
#   and the image is also resampled onto a different voxel grid
# The tolerance on the comparison to a result generated by a prior software version
#   is modulated based on the expected output image
mrcalc mrtransform/out.mif.gz -abs 1e-5 -mult - | \
mrfilter - smooth tmp.mif -force

mrtransform moving.mif.gz -template template.mif.gz -linear moving2template.txt - | \
testing_diff_image - mrtransform/out.mif.gz -image tmp.mif
