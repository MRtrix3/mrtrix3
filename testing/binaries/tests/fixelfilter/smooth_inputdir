#!/bin/bash
# Verify operation of "smooth" filter when input is a fixel directory
# Ensure that output matches that generated by a prior software version
rm -rf tmp/
fixelfilter fixelfilter/smooth/in/ smooth -matrix SIFT_phantom/matrix tmp/ -force
testing_diff_image tmp/sub01.mif fixelfilter/smooth/out/sub01.mif -frac 1e-5
